{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "extraction-report-bundle-v1.json",
  "title": "ExtractionReportBundle",
  "description": "Batch report for a full discovery run (contract v1.0.0)",
  "type": "object",
  "required": [
    "generated_at",
    "version",
    "reports",
    "failures"
  ],
  "properties": {
    "schema_version": {
      "type": ["string", "null"],
      "description": "Schema contract version"
    },
    "generated_at": {
      "type": "string",
      "description": "ISO 8601 timestamp of generation"
    },
    "version": {
      "type": "string",
      "description": "Tool version"
    },
    "reports": {
      "type": "array",
      "items": { "$ref": "extraction-report-v1.json" },
      "description": "Per-command extraction reports"
    },
    "failures": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Failed command names"
    }
  }
}
